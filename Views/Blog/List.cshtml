@model IEnumerable<Lab2_1_AspNetMVC_DailyBlogger.Models.BlogPost>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blog Posts - List</title>
</head>
<body>
    <p>
    </p>
    @foreach (var item in Model)
    {
        <div>
            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.id"> @Html.DisplayFor(m => item.blogTitle) </a>
            @*<p>@Html.DisplayFor(m => item.content)</p>*@ @*commented out per instructions. this may be too long for some entries...added by th 08042020*@
            <p>@Html.DisplayFor(m => item.blogDate)</p>
        </div>
    }    

</body>
</html>
